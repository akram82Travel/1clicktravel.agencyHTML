
{% extends 'base.html.twig' %}

{% block title %} Clien Profile!{% endblock %}

{% block body %}
<br></br>
<div class="container">
    <div class="main-body">
    
          <!-- Breadcrumb -->
          <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="#">User</a></li>
              <li class="breadcrumb-item active" aria-current="page">User Profile</li>
            </ol>
          </nav>
          <!-- /Breadcrumb -->
        
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4>John Doe</h4>
                      <p class="text-secondary mb-1">Full Stack Developer</p>
                      <p class="text-muted font-size-sm">Bay Area, San Francisco, CA</p>
                      
                    </div>
                  </div>
                </div>
              </div>
            
            </div>
            {{ form_start(formulaire) }}
            <div class="col-md-2000">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">
                      
                        {{form_label(formulaire.Nom,'Nom')}}
                      </h6>
                    </div>
                    <div class="col-sm-9 ">                 
                         {{form_widget(formulaire.Nom)}}
                    </div>
                  </div>
                  <hr>
                  
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0"> {{ form_label(formulaire.Prenom, 'Prenom') }}
                      </h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                         {{form_widget(formulaire.Prenom)}}
                    </div>
                  </div>
                 
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">{{ form_label(formulaire.Date_de_naissance, 'Date_de_naissance') }}
                      </h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                         {{form_widget(formulaire.Date_de_naissance)}}
                    </div>
                  </div>
                  
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">{{ form_label(formulaire.Genre, 'Genre') }}
                      </h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                       {{form_widget(formulaire.Genre)}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">{{ form_label(formulaire.Pays, 'Pays') }}
                      </h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                       {{form_widget(formulaire.Pays)}}
                    </div>
                  </div>
                  
                  <hr>
                   <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">{{ form_label(formulaire.email, 'email') }}
                      </h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                       {{form_widget(formulaire.email)}}
                    </div>
                  </div>
                  <hr>
                  
                 <!-- <hr>
                  <div class="row">
                    <div class="col-sm-12">
                      <a class="btn btn-info " target="__blank" href="https://www.bootdey.com/snippets/view/profile-edit-data-and-skills">Edit</a>
                    </div>
                  </div>!-->
                </div>
              </div>

            </div>
            {{ form_end(formulaire) }}
          </div>
          

     </div>
  </div>
{% endblock %}